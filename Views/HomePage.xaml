<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Chess.Views.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:Chess.Models"
    xmlns:vm="clr-namespace:Chess.ViewModel"
    Title="HomePage"
    x:DataType="vm:HomePageVM"
    BackgroundImageSource="homepagebackgroud.jpg">
    <VerticalStackLayout Spacing="20">
        <Label
            FontSize="30"
            HorizontalOptions="Center"
            Text="{Binding UserName, StringFormat='Hello {0}!'}"
            TextColor="Black" />
        <Button Command="{Binding PlayCommand}" Text="{x:Static m:Strings.Play}" />
        <Label
            FontSize="30"
            HorizontalOptions="Center"
            Text="First time playing?" />
        <Button Command="{Binding InstructionsCommand}" Text="{x:Static m:Strings.Instructions}" />

    </VerticalStackLayout>
</ContentPage>