<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Chess.Views.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:Chess.Models"
    xmlns:vm="clr-namespace:Chess.ViewModel"
    Title="HomePage"
    x:DataType="vm:HomePageVM"
    BackgroundImageSource="homepagebackgroud.jpg">
    <Frame
        Padding="20"
        BackgroundColor="#CCFFFFFF"
        CornerRadius="20"
        HasShadow="True"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        WidthRequest="320">

        <VerticalStackLayout Spacing="12">

            <Label
                Margin="0,0,0,5"
                FontAttributes="Bold"
                FontSize="28"
                HorizontalOptions="Center"
                Text="{Binding UserName, StringFormat='Hello {0}!'}"
                TextColor="#2C3E50" />

            <Button
                BackgroundColor="#27AE60"
                Command="{Binding PlayCommand}"
                CornerRadius="10"
                FontAttributes="Bold"
                HeightRequest="60"
                Text="{x:Static m:Strings.Play}"
                TextColor="White" />

            <Button
                BackgroundColor="#2980B9"
                Command="{Binding PuzzleCommand}"
                CornerRadius="10"
                HeightRequest="60"
                Text="{x:Static m:Strings.Puzzle}"
                TextColor="White" />

            <BoxView
                Margin="0,5"
                HeightRequest="1"
                Color="#BDC3C7" />

            <Label
                FontSize="16"
                HorizontalOptions="Center"
                Text="First time playing?"
                TextColor="#7F8C8D" />

            <Button
                BackgroundColor="Transparent"
                BorderColor="#34495E"
                BorderWidth="2"
                Command="{Binding InstructionsCommand}"
                CornerRadius="10"
                HeightRequest="55"
                Text="{x:Static m:Strings.Instructions}"
                TextColor="#34495E" />

        </VerticalStackLayout>
    </Frame>
</ContentPage>