<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Chess.Views.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:Chess.Models"
    xmlns:vm="clr-namespace:Chess.ViewModel"
    Title="HomePage"
    x:DataType="vm:HomePageVM"
    BackgroundImageSource="homepagebackgroud.jpg">
    <Frame 
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                BackgroundColor="#CCFFFFFF" 
                CornerRadius="20"
                HasShadow="True"
                Padding="20"
                WidthRequest="320">

        <VerticalStackLayout Spacing="12">

            <Label
                        FontSize="28"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        Text="{Binding UserName, StringFormat='Hello {0}!'}"
                        TextColor="#2C3E50" 
                        Margin="0,0,0,5"/>

            <Button 
                        Command="{Binding PlayCommand}" 
                        Text="{x:Static m:Strings.Play}"
                        BackgroundColor="#27AE60"
                        TextColor="White"
                        FontAttributes="Bold"
                        HeightRequest="55"
                        CornerRadius="10" />

            <Button 
                        Command="{Binding PuzzleCommand}" 
                        Text="{x:Static m:Strings.Puzzle}"
                        BackgroundColor="#2980B9"
                        TextColor="White"
                        HeightRequest="60"
                        CornerRadius="10" />

            <BoxView HeightRequest="1" Color="#BDC3C7" Margin="0,5" />

            <Label
                        FontSize="16"
                        HorizontalOptions="Center"
                        Text="First time playing?"
                        TextColor="#7F8C8D" />

            <Button 
                        Command="{Binding InstructionsCommand}" 
                        Text="{x:Static m:Strings.Instructions}"
                        BackgroundColor="Transparent"
                        BorderColor="#34495E"
                        BorderWidth="2"
                        TextColor="#34495E"
                        HeightRequest="55" 
                        CornerRadius="10" />

        </VerticalStackLayout>
    </Frame>
</ContentPage>