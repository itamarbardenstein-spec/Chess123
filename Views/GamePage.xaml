<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Chess.Views.GamePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:Chess.ViewModel"
    xmlns:m="clr-namespace:Chess.Models"
    Title="GamePage"
    x:DataType="vm:GamePageVM">
    <ContentPage.Background>
    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="MidnightBlue" Offset="0.0" />
            <GradientStop Color="SteelBlue" Offset="0.5" />
        <GradientStop Color="MidnightBlue" Offset="1.0" />
    </LinearGradientBrush>
    </ContentPage.Background>
    <VerticalStackLayout Padding="10" Spacing="0" VerticalOptions="Center">

        <Grid ColumnDefinitions="*, Auto" Margin="0,0,0,8" VerticalOptions="End">
            <HorizontalStackLayout Grid.Column="0" Spacing="8" VerticalOptions="Center">
                <VerticalStackLayout Spacing="0">
                    <Label Text="{Binding OpponentName}" FontAttributes="Bold" FontSize="14" TextColor="White" />
                    <ScrollView Orientation="Horizontal" HorizontalScrollBarVisibility="Never" HeightRequest="18">
                        <HorizontalStackLayout BindableLayout.ItemsSource="{Binding OpponentCapturedPieces}">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <Image Source="{Binding .}" WidthRequest="16" HeightRequest="16" Opacity="0.8" Margin="0,0,1,0"/>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </HorizontalStackLayout>
                    </ScrollView>
                </VerticalStackLayout>
            </HorizontalStackLayout>

            <Border Grid.Column="1" Background="#333333" Padding="10,5" Stroke="#555555" StrokeThickness="1">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="5" />
                </Border.StrokeShape>
                <Label Text="{Binding OpponentTime}" FontSize="24" FontFamily="monospace" TextColor="#FF4444" />
            </Border>
        </Grid>

        <Label Text="{Binding StatusMessage}" 
               HorizontalOptions="Center" 
               TextColor="White" 
               FontSize="14" 
               FontAttributes="Italic" 
               Margin="0,5" 
               Opacity="0.9" />

        <Grid x:Name="grdBoard" 
              ColumnSpacing="0" 
              RowSpacing="0" 
              HorizontalOptions="Center" 
              VerticalOptions="Center"
              BackgroundColor="#B58863" />

        <Grid ColumnDefinitions="*, Auto" Margin="0,8,0,0" VerticalOptions="Start">
            <HorizontalStackLayout Grid.Column="0" Spacing="8" VerticalOptions="Center">
                <VerticalStackLayout Spacing="0">
                    <Label Text="{Binding MyName}" FontAttributes="Bold" FontSize="14" TextColor="White" />
                    <ScrollView Orientation="Horizontal" HorizontalScrollBarVisibility="Never" HeightRequest="18">
                        <HorizontalStackLayout BindableLayout.ItemsSource="{Binding MyCapturedPieces}">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <Image Source="{Binding .}" WidthRequest="16" HeightRequest="16" Opacity="0.8" Margin="0,0,1,0"/>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </HorizontalStackLayout>
                    </ScrollView>
                </VerticalStackLayout>
            </HorizontalStackLayout>

            <Border Grid.Column="1" Background="#252525" Padding="10,5" Stroke="#2196F3" StrokeThickness="2">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="5" />
                </Border.StrokeShape>
                <Label Text="{Binding MyTime}" FontSize="24" FontFamily="monospace" TextColor="White" />
            </Border>
        </Grid>

        <Button Text="RESIGN"
                Command="{Binding ResignCommand}"
                FontSize="16"
                FontAttributes="Bold"
                TextColor="#FF4B4B"
                BackgroundColor="Transparent"
                BorderColor="#FF4B4B"
                BorderWidth="2"
                HeightRequest="44"
                WidthRequest="130"
                CornerRadius="22" 
                HorizontalOptions="Center"
                Margin="0,25" />

    </VerticalStackLayout>
</ContentPage>