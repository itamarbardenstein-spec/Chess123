<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Chess.Views.GamePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:Chess.ViewModel"
    Title="GamePage"
    x:DataType="vm:GamePageVM">
    <VerticalStackLayout>
        <Label HorizontalOptions="Center" Text="{Binding OpponentName}" />
        <Label
            Margin="25"
            HorizontalOptions="Center"
            Text="{Binding StatusMessage}" />
        <Border
            Padding="15,5"
            Background="#333333"
            HorizontalOptions="Center"
            MaximumWidthRequest="200"
            Stroke="#555555"
            StrokeThickness="2">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10" />
            </Border.StrokeShape>
            <Label
                FontAttributes="Bold"
                FontFamily="monospace"
                FontSize="32"
                HorizontalOptions="Center"
                Text="{Binding OpponentTime}"
                TextColor="#FF4444" />
        </Border>
        <Grid            
            x:Name="grdBoard"
            ColumnSpacing="1"
            HorizontalOptions="Center"
            RowSpacing="1"
            VerticalOptions="Center" />
        <Border
            Padding="15,5"
            Background="#252525"
            HorizontalOptions="Center"
            MaximumWidthRequest="200"
            Stroke="#2196F3"
            StrokeThickness="3">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10" />
            </Border.StrokeShape>
            <Label
                FontAttributes="Bold"
                FontFamily="monospace"
                FontSize="32"
                HorizontalOptions="Center"
                Text="{Binding MyTime}"
                TextColor="White" />
        </Border>
        <Button
            Margin="0,10"
            BackgroundColor="Transparent"
            BorderColor="#FF4B4B"
            BorderWidth="2"
            Command="{Binding ResignCommand}"
            CornerRadius="25"
            FontAttributes="Bold"
            FontFamily="monospace"
            FontSize="16"
            HeightRequest="50"
            HorizontalOptions="Center"
            Text="RESIGN"
            TextColor="#FF4B4B"
            WidthRequest="140" />
        <Label HorizontalOptions="Center" Text="{Binding MyName}" />
    </VerticalStackLayout>
</ContentPage>