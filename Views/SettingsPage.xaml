<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Chess.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:Chess.Models"
    xmlns:vm="clr-namespace:Chess.ViewModel"
    x:DataType="vm:SettingsPageVM"
    Title="SettingsPage"
    BackgroundColor="#F8F8F8">
    <ScrollView>
        <StackLayout Padding="20" Spacing="25">

            <!-- כותרת -->
            <Label Text="Settings"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- דגשים כלליים -->
            <Label Text="General"
                   FontAttributes="Bold"
                   FontSize="18" />

            <!-- דוגמה: סוויץ' צליל -->
            <StackLayout Orientation="Horizontal" VerticalOptions="Center">
                <Label Text="Sound" VerticalOptions="Center"/>
                <Switch IsToggled="{Binding IsSoundOn}" HorizontalOptions="EndAndExpand"/>
            </StackLayout>

            <!-- דוגמה: סוויץ' התראות -->
            <StackLayout Orientation="Horizontal" VerticalOptions="Center">
                <Label Text="Notifications" VerticalOptions="Center"/>
                <Switch IsToggled="{Binding AreNotificationsOn}" HorizontalOptions="EndAndExpand"/>
            </StackLayout>

            <!-- דוגמה: שינוי זמן משחק -->
            <Label Text="Game Time (minutes)" FontAttributes="Bold"/>
            <Slider Minimum="1" Maximum="30" Value="{Binding GameTime}" />

            <Label Text="{Binding GameTime, StringFormat='Selected: {0} min'}" HorizontalOptions="Center" />

            <!-- כפתור שמירה -->
            <Button Text="Save Settings"
                    Command="{Binding SaveCommand}"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    CornerRadius="8"
                    HorizontalOptions="FillAndExpand"
                    HeightRequest="50"/>

            <!-- כפתור חזרה -->
            <Button Text="Back"
                    Command="{Binding BackCommand}"
                    BackgroundColor="Transparent"
                    TextColor="#007AFF"
                    HorizontalOptions="Center"
                    HeightRequest="40"/>

        </StackLayout>
    </ScrollView>
</ContentPage>