<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Chess.NewFolder.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:Chess.Models"
    xmlns:vm="clr-namespace:Chess.ViewModel"
    Title="LoginPage"
    x:DataType="vm:LoginPagVM">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="DarkOrchid" Offset="0.1" />
            <GradientStop Color="MidnightBlue" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">

            <Label Text="{StaticResource IconSecurity}"
                   FontFamily="MaterialSymbols"
                   FontSize="80"
                   HorizontalOptions="Center"
                   TextColor="White"
                   Margin="0,0,0,10" />

            <Label Text="{x:Static m:Strings.Login}"
                   FontAttributes="Bold"
                   FontSize="32"
                   HorizontalOptions="Center"
                   TextColor="White" />

            <Border Padding="20" BackgroundColor="#22FFFFFF" StrokeThickness="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="15">
                    <Border Stroke="#55FFFFFF" StrokeThickness="1" StrokeShape="RoundRectangle 10" BackgroundColor="#33000000" Padding="5,0">
                        <Entry Placeholder="{x:Static m:Strings.UserName}"
                               Text="{Binding UserName}"
                               TextColor="White"
                               PlaceholderColor="#CCC"
                               HeightRequest="50" />
                    </Border>

                    <Border Stroke="#55FFFFFF" StrokeThickness="1" StrokeShape="RoundRectangle 10" BackgroundColor="#33000000" Padding="5,0">
                        <Entry Placeholder="{x:Static m:Strings.Email}"
                               Text="{Binding Email}"
                               TextColor="White"
                               PlaceholderColor="#CCC"
                               Keyboard="Email"
                               HeightRequest="50" />
                    </Border>

                    <Border Stroke="#55FFFFFF" StrokeThickness="1" StrokeShape="RoundRectangle 10" BackgroundColor="#33000000" Padding="5,0">
                        <Grid ColumnDefinitions="*, Auto">
                            <Entry IsPassword="{Binding IsPassword}"
                                   Placeholder="{x:Static m:Strings.Password}"
                                   Text="{Binding Password}"
                                   TextColor="White"
                                   PlaceholderColor="#CCC"
                                   HeightRequest="50" />
                            <Button Grid.Column="1"
                                    Text="{Binding IsPassword, Converter={StaticResource passwordIconConvert}}"
                                    Command="{Binding ToggleIsPasswordCommand}"
                                    FontFamily="MaterialSymbols"
                                    FontSize="20"
                                    BackgroundColor="Transparent"
                                    TextColor="White"
                                    WidthRequest="50" />
                        </Grid>
                    </Border>

                    <Button Text="{x:Static m:Strings.ForgotPassword}"
                            Command="{Binding ForgotPaswordCommand}"
                            BackgroundColor="Transparent"
                            TextColor="LightBlue"
                            FontSize="13"
                            HorizontalOptions="Start"
                            Padding="0"
                            Margin="0"/>

                    <Button Text="{x:Static m:Strings.Login}"
                            Command="{Binding LoginCommand}"
                            BackgroundColor="DarkTurquoise"
                            TextColor="White"
                            FontAttributes="Bold"
                            FontSize="20"
                            HeightRequest="55"
                            CornerRadius="27"
                            Margin="0,10,0,0" />
                </VerticalStackLayout>
            </Border>

            <Label Text="OR" HorizontalOptions="Center" TextColor="White" Opacity="0.6" Margin="0,10" />

            <Button Text="Login with Google"
                    Command="{Binding GoogleLoginCommand}"
                    BackgroundColor="White"
                    TextColor="#444"
                    FontSize="16"
                    FontAttributes="Bold"
                    HeightRequest="55"
                    CornerRadius="27">
                <Button.Shadow>
                    <Shadow Brush="Black" Opacity="0.3" Offset="2,2" />
                </Button.Shadow>
            </Button>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>