<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Chess.NewFolder.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:Chess.Models"
    xmlns:vm="clr-namespace:Chess.ViewModel"
    Title="LoginPage"
    x:DataType="vm:LoginPagVM">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Offset="0.1" Color="DarkOrchid" />
            <GradientStop Offset="1.0" Color="MidnightBlue" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <VerticalStackLayout
            Padding="30"
            Spacing="20"
            VerticalOptions="Center">

            <Label
                Margin="0,0,0,10"
                FontFamily="MaterialSymbols"
                FontSize="80"
                HorizontalOptions="Center"
                Text="{StaticResource IconSecurity}"
                TextColor="White" />

            <Label
                FontAttributes="Bold"
                FontSize="32"
                HorizontalOptions="Center"
                Text="{x:Static m:Strings.Login}"
                TextColor="White" />

            <Border
                Padding="20"
                BackgroundColor="#22FFFFFF"
                StrokeThickness="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="15">
                    <Border
                        Padding="5,0"
                        BackgroundColor="#33000000"
                        Stroke="#55FFFFFF"
                        StrokeShape="RoundRectangle 10"
                        StrokeThickness="1">
                        <Entry
                            HeightRequest="50"
                            Placeholder="{x:Static m:Strings.UserName}"
                            PlaceholderColor="#CCC"
                            Text="{Binding UserName}"
                            TextColor="White" />
                    </Border>

                    <Border
                        Padding="5,0"
                        BackgroundColor="#33000000"
                        Stroke="#55FFFFFF"
                        StrokeShape="RoundRectangle 10"
                        StrokeThickness="1">
                        <Entry
                            HeightRequest="50"
                            Keyboard="Email"
                            Placeholder="{x:Static m:Strings.Email}"
                            PlaceholderColor="#CCC"
                            Text="{Binding Email}"
                            TextColor="White" />
                    </Border>

                    <Border
                        Padding="5,0"
                        BackgroundColor="#33000000"
                        Stroke="#55FFFFFF"
                        StrokeShape="RoundRectangle 10"
                        StrokeThickness="1">
                        <Grid ColumnDefinitions="*, Auto">
                            <Entry
                                HeightRequest="50"
                                IsPassword="{Binding IsPassword}"
                                Placeholder="{x:Static m:Strings.Password}"
                                PlaceholderColor="#CCC"
                                Text="{Binding Password}"
                                TextColor="White" />
                            <Button
                                Grid.Column="1"
                                BackgroundColor="Transparent"
                                Command="{Binding ToggleIsPasswordCommand}"
                                FontFamily="MaterialSymbols"
                                FontSize="20"
                                Text="{Binding IsPassword, Converter={StaticResource passwordIconConvert}}"
                                TextColor="White"
                                WidthRequest="50" />
                        </Grid>
                    </Border>

                    <Button
                        Margin="0"
                        Padding="0"
                        BackgroundColor="Transparent"
                        Command="{Binding ForgotPaswordCommand}"
                        FontSize="13"
                        HorizontalOptions="Start"
                        Text="{x:Static m:Strings.ForgotPassword}"
                        TextColor="LightBlue" />

                    <Button
                        Margin="0,10,0,0"
                        BackgroundColor="DarkTurquoise"
                        Command="{Binding LoginCommand}"
                        CornerRadius="27"
                        FontAttributes="Bold"
                        FontSize="20"
                        HeightRequest="55"
                        Text="{x:Static m:Strings.Login}"
                        TextColor="White" />
                </VerticalStackLayout>
            </Border>

            <Label
                Margin="0,10"
                HorizontalOptions="Center"
                Opacity="0.6"
                Text="OR"
                TextColor="White" />

            <Button
                BackgroundColor="White"
                Command="{Binding GoogleLoginCommand}"
                CornerRadius="27"
                FontAttributes="Bold"
                FontSize="16"
                HeightRequest="55"
                Text="Login with Google"
                TextColor="#444">
                <Button.Shadow>
                    <Shadow
                        Brush="Black"
                        Opacity="0.3"
                        Offset="2,2" />
                </Button.Shadow>
            </Button>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>