<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Chess.Views.ResetPasswodPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:Chess.Models"
    xmlns:vm="clr-namespace:Chess.ViewModel"
    Title="ResetPasswodPage"
    x:DataType="vm:ResetPasswodPageVM">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Offset="0.1" Color="DarkOrchid" />
            <GradientStop Offset="1.0" Color="MidnightBlue" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <VerticalStackLayout
        Padding="30"
        HorizontalOptions="Center"
        Spacing="20"
        VerticalOptions="Center">

        <Image
            Margin="0,0,0,10"
            HeightRequest="80"
            HorizontalOptions="Center"
            Source="lock_icon.png" />

        <Label
            FontAttributes="Bold"
            FontSize="28"
            HorizontalOptions="Center"
            Text="Forgot Password?"
            TextColor="White" />

        <Label
            Margin="0,0,0,20"
            FontSize="14"
            HorizontalOptions="Center"
            HorizontalTextAlignment="Center"
            Text="Enter your email address and we'll send you a link to reset your password."
            TextColor="LightGray" />

        <Border
            Padding="20"
            BackgroundColor="#22FFFFFF"
            StrokeThickness="0">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="15" />
            </Border.StrokeShape>

            <VerticalStackLayout Spacing="15">
                <Entry
                    BackgroundColor="#33000000"
                    HeightRequest="50"
                    Keyboard="Email"
                    Placeholder="{x:Static m:Strings.Email}"
                    PlaceholderColor="#CCCCCC"
                    Text="{Binding EmailForReset}"
                    TextColor="White" />

                <Button
                    BackgroundColor="DarkTurquoise"
                    Command="{Binding ResetEmail}"
                    CornerRadius="25"
                    FontAttributes="Bold"
                    FontSize="16"
                    HeightRequest="50"
                    Text="{x:Static m:Strings.ResetPassword}"
                    TextColor="White" />
            </VerticalStackLayout>
        </Border>

        <Button
            BackgroundColor="Transparent"
            Command="{Binding BackToLoginCommand}"
            FontSize="14"
            HorizontalOptions="Center"
            Text="Back to Login"
            TextColor="White" />

    </VerticalStackLayout>
</ContentPage>