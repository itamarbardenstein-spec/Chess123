<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Chess.Views.PuzzleDifficultyPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:Chess.Models"
    xmlns:vm="clr-namespace:Chess.ViewModel"
    Title="PuzzleDifficulty"
    x:DataType="vm:PuzzleDiffic×•tyVM"
    BackgroundColor="#121212">
    <VerticalStackLayout
        Padding="40"
        Spacing="20"
        VerticalOptions="Center">

        <Label
            Margin="0,0,0,30"
            FontAttributes="Bold"
            FontSize="24"
            HorizontalOptions="Center"
            Text="{x:Static m:Strings.SelectDifficulty}"
            TextColor="#E1E1E1" />

        <Button
            BackgroundColor="#2E7D32"
            Command="{Binding EasyPuzzleCommand}"
            CornerRadius="8"
            FontAttributes="Bold"
            FontSize="20"
            HeightRequest="70"
            Text="{x:Static m:Strings.Easy}"
            TextColor="White" />

        <Button
            BackgroundColor="#EF6C00"
            Command="{Binding MediumPuzzleCommand}"
            CornerRadius="8"
            FontAttributes="Bold"
            FontSize="20"
            HeightRequest="70"
            Text="{x:Static m:Strings.Medium}"
            TextColor="White" />

        <Button
            BackgroundColor="#C62828"
            Command="{Binding HardPuzzleCommand}"
            CornerRadius="8"
            FontAttributes="Bold"
            FontSize="20"
            HeightRequest="70"
            Text="{x:Static m:Strings.Hard}"
            TextColor="White" />

        <BoxView
            Margin="0,20"
            HeightRequest="1"
            Color="#333" />

        <Button
            BackgroundColor="Transparent"
            BorderColor="#555555"
            BorderWidth="2"
            Command="{Binding HomeCommand}"
            CornerRadius="25"
            HeightRequest="60"
            Text="{x:Static m:Strings.Home}"
            TextColor="#AAAAAA" />

    </VerticalStackLayout>
</ContentPage>